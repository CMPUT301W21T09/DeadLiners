<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/replyinfo_back_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="167dp">

        <TextView
            android:id="@+id/reply_descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Reply:"
            android:textColor="#673AB7"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/reply_content"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/reply_publisher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Publisher:"
            android:textColor="#673AB7"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/reply_publisher_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reply_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Time:"
                android:textColor="#673AB7"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/reply_time_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/replyinfo_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@android:drawable/ic_input_add"
            android:clickable="true"
            android:focusable="true"
            android:scrollbarTrackVertical="@android:drawable/ic_menu_revert"
            android:src="@android:drawable/ic_menu_revert"
            tools:ignore="MissingConstraints"></com.google.android.material.floatingactionbutton.FloatingActionButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>